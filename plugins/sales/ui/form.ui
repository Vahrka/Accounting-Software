   <string notr="true">/* ====================== */
/* CORE APPLICATION STYLES */
/* ====================== */

QMainWindow {
    background-color: #f8fafc;
    font-size: 13px;
    color: #374151;
}

/* ====================== */
/* ENHANCED NAVBAR STYLES */
/* ====================== */

/* This is the Menu &quot;BAR&quot; it self */
QMenuBar {
    background-color: #ffffff;
    padding: 8px 0;
    margin: 0;
    outline: 0;
    border-bottom: 1px solid #e5e7eb;
    font-size: 13px;
    font-weight: 500;
}

/* This is the Top Menubar each item but not its content */
QMenuBar::item {
    padding: 8px 14px;
    margin: 0 6px;
    border-radius: 6px;
    color: #4b5563;
    background-color: transparent;
}

QMenuBar::item:hover {
    background-color: #f3f4f6;
    color: #1d4ed8;
}

QMenuBar::item:selected {
    background-color: #eff6ff;
    color: #1d4ed8;
    font-weight: 600;
}

QMenuBar::item:pressed {
    background-color: #e5e7eb;
}

QMenuBar::icon {
    margin-right: 12px;
    left: 12px;
    width: 18px;
    height: 18px;
}

/* ====================== */
/* SIDE NAVIGATION STYLES */
/* ====================== */

#MainSideNavFrame {
    background-color: #fafcfe;
    border: 3px solid #e5e7eb;
    padding: 8px 0;
    border-radius: 15px;
}

#MainSideNavFrame QPushButton { /* The btns inside navbar */
    min-width: 50px;
    max-width: 200px;
    padding: 10px 35px 10px 10px;
    border-left: 5px solid #6453fe;
    margin: 0px 8px;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    font-size: 14px;
    font-weight: 400;
    color: #4b5563;
    text-align: left;
    background-color: transparent;
}

#MainSideNavFrame QPushButton:hover {
    background-color: #f3f4f6;
    color: #1d4ed8;
    border-left: 5px solid #ff006a;
}


#MainSideNavFrame QPushButton::icon {
    margin-right: 12px;
    width: 18px;
    height: 18px;
}

/* ====================== */
/* BUTTON STYLES */
/* ====================== */

QPushButton {
    min-width: 90px;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    border: 1px solid #d1d5db;
    background-color: #ffffff;
    color: #374151;
}

QPushButton:hover {
    background-color: #f9fafb;
    border-color: #9ca3af;
    color: #1d4ed8;
}

QPushButton:pressed {
    background-color: #f3f4f6;
}

QPushButton:disabled {
    color: #9ca3af;
    background-color: #f8f9fa;
}

QPushButton.primary {
    background-color: #2563eb;
    border-color: #2563eb;
    color: #ffffff;
}

QPushButton.primary:hover {
    background-color: #1d4ed8;
    border-color: #1d4ed8;
}

QPushButton.danger {
    background-color: #dc2626;
    border-color: #dc2626;
    color: #ffffff;
}

QPushButton.danger:hover {
    background-color: #b91c1c;
    border-color: #b91c1c;
}

/* ====================== */
/* PLUGIN MANAGER STYLES */
/* ====================== */

QDialog#pluginManager {
    background-color: #ffffff;
    border-radius: 15px;
    padding: 12px;
    border: 1px solid #e5e7eb;
}

QDialog #pluginList {
    background-color: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    padding: 6px;
}

QDialog #pluginList:item::hover {
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    padding: 6px;
}

QDialog #pluginList:item::selected {
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    padding: 6px;
}

QDialog #pluginList:item::focus {
    border: 1px solid #e2e8f0;
    background: #fff;
    border-radius: 6px;
    padding: 6px;
}


#pluginCheckbox {
    spacing: 10px;
    font-size: 13px;
    padding: 4px 0;
    color: #374151;
}

#pluginCheckbox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 6px;
    border: 1px solid #cbd5e1;
}

#pluginCheckbox::indicator:checked {
    background-color: #3b82f6;
    border-color: #2563eb;
    border: 2px solid #cbd5e1;
}

#pluginDeleteBtn {
    min-width: 80px;
    padding: 7px 14px;
    font-size: 13px;
    font-weight: 500;
    border-radius: 6px;
    background-color: #fef2f2;
    border: 1px solid #fee2e2;
    color: #b91c1c;
}

#pluginDeleteBtn:hover {
    background-color: #fee2e2;
    border-color: #fecaca;
    border: 1px solid #cbd5e1;
}

/* ====================== */
/* MENU STYLES */
/* ====================== */

QMenu.menubar-menu {
    background-color: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 13px;
    color: #374151;
    font-weight: 500;
}

QMenu.menubar-menu::item {
    padding: 8px 14px;
    /* padding: 8px 24px 8px 36px; */
    border-radius: 0;
}

QMenu.menubar-menu::item:selected {
    background-color: #f3f4f6;
    color: #1d4ed8;
}

QMenu.menubar-menu::item:selected:first {
    border-top-right-radius: 8px;
}

QMenu.menubar-menu::item:selected:last {
    border-bottom-right-radius: 8px;
}

QMenu.menubar-menu::icon {
    margin: 0 12px 0 6px;
    width: 18px;
    height: 18px;
}

/* ====================== */
/* SCROLLBAR STYLES */
/* ====================== */

/* ===== MODERN SCROLLBARS WITH NO CORNER ARTIFACTS ===== */
/* Applies to all QScrollBars in the application */

/* --- COMPLETELY REMOVE RESIZE CORNER --- */
QScrollBar::corner,
QAbstractScrollArea::corner {
    background: transparent;
    border: none;
    width: 0;
    height: 0;
}

/* --- VERTICAL SCROLLBAR --- */
QScrollBar:vertical {
    width: 12px;
    background: #f1f5f9;
    border-radius: 6px;
    margin: 0;
    padding: 0;
}

QScrollBar::handle:vertical {
    background: #cbd5e1;
    min-height: 30px;
    border-radius: 6px;
    margin: 12px 0;
}

QScrollBar::handle:vertical:hover {
    background: #9ca3af;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 12px;
    background: #e2e8f0;
    border-radius: 6px;
}

QScrollBar::add-line:vertical:hover,
QScrollBar::sub-line:vertical:hover {
    background: #cbd5e1;
}

QScrollBar::add-line:vertical:pressed,
QScrollBar::sub-line:vertical:pressed {
    background: #9ca3af;
}

/* --- HORIZONTAL SCROLLBAR --- */
QScrollBar:horizontal {
    height: 12px;
    background: #f1f5f9;
    border-radius: 6px;
    margin: 0;
    padding: 0;
}

QScrollBar::handle:horizontal {
    background: #cbd5e1;
    min-width: 30px;
    border-radius: 6px;
    margin: 0 12px;
}

QScrollBar::handle:horizontal:hover {
    background: #9ca3af;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 12px;
    background: #e2e8f0;
    border-radius: 6px;
}

QScrollBar::add-line:horizontal:hover,
QScrollBar::sub-line:horizontal:hover {
    background: #cbd5e1;
}

QScrollBar::add-line:horizontal:pressed,
QScrollBar::sub-line:horizontal:pressed {
    background: #9ca3af;
}


/* ====================== */
/* TEXT INPUT STYLES */
/* ====================== */

QLineEdit, QTextEdit {
    border: 1px solid #d1d5db;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
    background-color: #ffffff;
}

QLineEdit:focus, QTextEdit:focus {
    border-color: #3b82f6;
}

/* ===== Modern Borderless QTabWidget ===== */

* {
    border: none;
}

QTabWidget {
    background: transparent;
}

/* Remove all borders from the content pane */
QTabWidget::pane {
    border: 0;
    margin: 0;
    padding: 0;
    top: -1px; /* Seamless connection with tab bar */
}

/* Tab bar styling */
QTabBar {
    background: transparent;
    spacing: 4px;
}

/* Individual tab styling */
QTabBar::tab {
    background: #f5f5f5;
    color: #555;
    border: 0;
    border-radius: 6px 6px 0 0;
    padding: 8px 20px;
    margin-right: 2px;
    font-family: 'Segoe UI', system-ui, sans-serif;
    font-size: 11pt;
    min-width: 80px;
}

/* Selected tab */
QTabBar::tab:selected {
    background: white;
    color: #5900ff;
    border-bottom: 3px solid #5900ff;
    font-weight: 500;
}

/* Hover effect */
QTabBar::tab:hover:!selected {
    background: #e0e0e0;
}

/* Disabled tab */
QTabBar::tab:disabled {
    color: #aaa;
    background: #f0f0f0;
}

/* Left/right scroll buttons (when tabs overflow) */
QTabBar QToolButton {
    background: #f0f0f0;
    border-radius: 4px;
}


QScrollArea {
    background: transparent;
}
